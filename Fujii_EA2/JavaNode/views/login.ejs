<%- include('partials/header') %>

    <div style="
    background: url('/images/login bg.png') no-repeat center center;
    background-size: cover;
    min-height: 100vh;
    padding: 4em 1em;
">



        <% if (typeof error !=='undefined' ) { %>
            <div style="color: red; margin-bottom: 1em; text-align: center;">
                <%= error %>
            </div>
            <% } %>

                <form action="/login" method="POST"
                    style="max-width: 400px; margin: 2em auto; background-color: rgba(255,255,255,0.95); padding: 2em; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.2);">

                    <h2 style="text-align: center; color: #000000; text-shadow: 1px 1px 3px rgba(0,0,0,0.7);">Login
                    </h2>

                    <div style="margin-bottom: 1em;">
                        <label for="username">Username:</label><br>
                        <input type="text" id="username" name="username" required
                            style="width: 100%; padding: 10px; box-sizing: border-box;">
                    </div>

                    <div style="margin-bottom: 1em;">
                        <label for="password">Password:</label><br>
                        <input type="password" id="password" name="password" required
                            style="width: 100%; padding: 10px; box-sizing: border-box;">
                    </div>

                    <button type="submit"
                        style="width: 100%; padding: 10px; background-color: orange; color: white; border: none; font-size: 1em; cursor: pointer;">
                        Login
                    </button>

                    <p style="text-align: center; margin-top: 1em; color: #000000;">
                        Don't have an account? <a href="/register" style="color:#8f4a37">Register here</a>
                    </p>
                    <%- include('partials/footer') %>
                </form>




    </div>

    <%- include('partials/footer') %>